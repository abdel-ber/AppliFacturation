@model IEnumerable<AppliFact.Models.Client>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<menu> <a class="btn btn-warning" asp-action="Create">Nouveau client</a></menu>
<hr />
@if (this.ViewBag.Model == null) {<p align="center">aucun Client trouvé</p> }
<div class="dm-table links">
    <table class="table">


        <thead>
            <tr>
                <th role="gridcell">
                    @Html.DisplayNameFor(model => model.RaisonSociale)
                </th>
                <th role="gridcell">
                    @Html.DisplayNameFor(model => model.Adresse)
                </th>
                <th role="gridcell">
                    @Html.DisplayNameFor(model => model.CodePostal)
                </th>
                <th role="gridcell">
                    @Html.DisplayNameFor(model => model.Ville)
                </th>
                <th role="gridcell">
                    @Html.DisplayNameFor(model => model.Pays)
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr role="row" onclick="window.location='@Url.Action("Details",new { id=item.Id})'">

                    <td role="gridcell">
                        @Html.DisplayFor(modelItem => item.RaisonSociale)
                    </td>
                    <td role="gridcell">
                        @Html.DisplayFor(modelItem => item.Adresse)
                    </td>
                    <td role="gridcell">
                        @Html.DisplayFor(modelItem => item.CodePostal)
                    </td>
                    <td role="gridcell">
                        @Html.DisplayFor(modelItem => item.Ville)
                    </td>
                    <td role="gridcell">
                        @Html.DisplayFor(modelItem => item.Pays)
                    </td>
                    <td role="gridcell">
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>



            }
        </tbody>
    </table>
</div>

